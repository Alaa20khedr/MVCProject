@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<form class="my-3" asp-action="Index" asp-asp-controller="UserController1">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search..." name="searchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-dark btn-block" />
        </div>
    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
               
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                 
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                 
                    <td>
                        <a class="btn btn-success " asp-controller="UserController1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-warning " asp-controller="UserController1" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger " asp-controller="UserController1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <br />
    <div class="alert alert-warning">
        <h1>No Users Found!!</h1>
    </div>
}



