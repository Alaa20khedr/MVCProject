@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewBag.RoleId;
}

<h1>AddOrRemoveUser</h1>

<form class="my-3" asp-action="AddOrRemoveUser" asp-route-roleid="@RoleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="btn-group-vertical" role="group" aria-label="Vertical radio toggle button group">

            <input asp-for="@Model[i].IsSelected"  class="btn-check" >
            <label asp-for="@Model[i].IsSelected" class="btn btn-outline-danger">@Model[i].UserName</label>

        </div>
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />
    }

    <div class="my-3">

        <input type="submit" value=" Update" class=" btn btn-success" />
        <a asp-action="Update" asp-controller="Rules" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>
    </div>
</form>

