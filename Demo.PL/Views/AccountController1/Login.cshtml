@model SignInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="text-danger"></div>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<form asp-action="Login">

			<input class="text email" type="email" asp-for="@Model.Email" placeholder="Email">
		

			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password">
			

			
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
					<span>RememberMe</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="LOGIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword" asp-controller="AccountController1"> Forget Password??</a></p>
	</div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

