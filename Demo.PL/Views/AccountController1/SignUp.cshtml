@model SignupViewModel
@{
	
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
			<div class="agileits-top">
				<div asp-validation-summary="All" class="text-danger"></div>
				@Html.ValidationSummary(true,"",new{@class="text-danger"})
		<form asp-action="SignUp">
					
			<input class="text email" type="email"asp-for="@Model.Email" placeholder="Email" >
			<span asp-validation-for="@Model.Email" class="text-danger"></span>

			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" >
			<span asp-validation-for="@Model.Password" class="text-danger"></span>

			<input class="text" type="password" asp-for="@Model.ConfirmPassword" placeholder="ConfirmPassword" />
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
			</div>
		</div> 

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>