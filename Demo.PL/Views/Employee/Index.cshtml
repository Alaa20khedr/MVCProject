
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>All Employees</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />

<form class="my-3" asp-action="Index" asp-asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
             <input placeholder="Search..." name="searchValue" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-dark btn-block" />
        </div>
    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                
                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Image)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Address)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Salary)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.IsActive)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                   
                    <td>@item.Name</td>
                    <td>

                        <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height="40" width="40" alt="Employee Image"/>
                    </td>
                    <td>@item.Address</td>
                    <td>@item.Salary</td>
                    <td>@item.Email</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a class="btn btn-success " asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-warning " asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger " asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <br />
    <div class="alert alert-warning">
        <h1>No Employee Found!!</h1>
    </div>
}


