@model EmployeeViewModel
@{
   
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}
<div class="form-group">
    <label asp-for="@Model.Name" class="form-label"></label>
    <input asp-for="@Model.Name" class="form-control">
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Address" class="form-label"></label>
    <input asp-for="@Model.Address" class="form-control">
    <span asp-validation-for="@Model.Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Email" class="form-label"></label>
    <input asp-for="@Model.Email" class="form-control">
    <span asp-validation-for="@Model.Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Salary" class="form-label"></label>
    <input asp-for="@Model.Salary" class="form-control">
    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.HiringDate" class="form-label"></label>
    <input asp-for="@Model.HiringDate" class="form-control">
    <span asp-validation-for="@Model.HiringDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.DepartmentId" class="col-form-label"></label>
    <select asp-for="@Model.DepartmentId" asp-items="Departments" class="form-control">
        <option selected>Choose Department...</option>
    </select>
    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>


</div>
<div class="form-group">
    <label asp-for="@Model.Image"class="col-form-label"></label>
    <input type="file" asp-for="@Model.Image" class="form-control">
</div>

<div class="form-check">
    <input class="form-check-input" type="checkbox" asp-for="@Model.IsActive">
    <label class="form-check-label" asp-for="@Model.IsActive">
  
    </label>
</div>


<br />

@section Scripts {
    <partial name="_validationScriptsPartial">
}
